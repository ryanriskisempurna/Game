import greenfoot.*;  // (World, Actor, GreenfootImage, Greenfoot and MouseInfo)

/**
 * Write a description of class lvl here.
 * 
 * @author (your name) 
 * @version (a version number or a date)
 */
public class lvl extends World
{

    /**
     * Constructor for objects of class lvl.
     * 
     */
    int nyawa = 3;
    public lvl()
    {    
        // Create a new world with 600x400 cells with a cell size of 1x1 pixels.
        super(70, 40, 10);
        addObject(new Player(),10,10);
        addObject(new key(),61,6);
        addObject(new passPlatform(),28,21);
    }
    public void act()
    {
        nyawa();
    }
    public void nyawa()
    {
        showText("Nyawa = " + nyawa,10,3);
    }
    public void kurangnyawa()
    {
        nyawa = nyawa - 1;
    }
    public void gamestop()
    {
        if(nyawa == 0)
        {
            Greenfoot.stop();
        }
    }
}
